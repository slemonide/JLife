<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd
       http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="hud" controller="ui.HUDController">
        <layer id="foreground" backgroundColor="#0000" childLayout="horizontal">
            <panel width="15%" height="100%" childLayout="vertical">
                <panel id="game_statistics_panel" width="100%" height="7%" childLayout="vertical"
                       backgroundColor="#66f8">
                    <panel id="generation_panel" width="100%" height="25%" childLayout="horizontal">
                        <text text="Generation: 0"
                              id="generation"
                              font="assets/Interface/Fonts/Arial.fnt"
                              color="77883e"
                              width="100%" height="100%"/>
                    </panel>

                    <panel id="population_panel" width="100%" height="25%" childLayout="horizontal">
                        <text text="Population: 0"
                              id="population"
                              font="assets/Interface/Fonts/Arial.fnt"
                              color="77883e"
                              width="100%" height="100%"/>
                    </panel>


                    <panel id="tick_time_panel" width="100%" height="25%" childLayout="horizontal">
                        <text text="Tick time: 0.0213123 s"
                              id="tick_time"
                              font="assets/Interface/Fonts/Arial.fnt"
                              color="77883e"
                              width="100%" height="100%"/>
                    </panel>
                </panel>
                <panel width="100%" height="93%" childLayout="vertical"/>
            </panel>

            <panel id="game_window_panel" width="75%" height="100%" childLayout="vertical"/>

            <panel id="player_controls_panel" width="10%" height="100%" childLayout="vertical">
                <panel id="player_stats_panel" width="100%" height="10%" childLayout="vertical"
                       backgroundColor="#00f8">
                    <panel id="health_panel" width="100%" height="25%" childLayout="horizontal">
                        <text text="Health: 100%"
                              id="health"
                              font="assets/Interface/Fonts/Arial.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="strength_panel" width="100%" height="25%" childLayout="horizontal">
                        <text text="Strength: 100%"
                              id="strength"
                              font="assets/Interface/Fonts/Arial.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="agility_panel" width="100%" height="25%" childLayout="horizontal">
                        <text text="Agility: 100%"
                              id="agility"
                              font="assets/Interface/Fonts/Arial.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="hunger_panel" width="100%" height="25%" childLayout="horizontal">
                        <text text="Hunger: 100%"
                              id="hunger"
                              font="assets/Interface/Fonts/Arial.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                </panel>
                <panel id="cell_choice_panel" width="100%" height="25%" childLayout="vertical"
                       backgroundColor="#44f8">
                    <panel width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_1"
                              id="cell_1"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_2" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_2"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_3" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_3"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_4" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_4"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_5" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_5"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_6" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_6"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_7" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_7"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_8" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_8"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_9" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_9"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                    <panel id="cell_10" width="100%" height="10%" childLayout="horizontal">
                        <text text="cell_10"
                              font="assets/Interface/Fonts/Arial_Small.fnt"
                              color="a7883e"
                              width="100%" height="100%"/>
                    </panel>
                </panel>
                <panel id="empty_panel" width="100%" height="65%" valign="center"/>
            </panel>
        </layer>
    </screen>

</nifty>